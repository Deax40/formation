{
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm install --legacy-peer-deps",
  "env": {
    "PRISMA_CLI_BINARY_TARGETS": "native",
    "PRISMA_ENGINES_CHECKSUM_IGNORE_MISSING": "1",
    "SKIP_ENV_VALIDATION": "1"
  },
  "functions": {
    "app/**/*.func.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
